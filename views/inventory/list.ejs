<div class="container text-center my-4">
  <a href="/" class="btn mt-3 ms-2">Go to home page</a>
  <a href="/load-data/products" class="btn mt-3 ms-2">Load Product Data</a>
  <a href="/inventory/add" class="btn mt-3 ms-2">Add Product</a>
</div>

<div class="inventory">
  <div class="container mt-4">
    <div class="row g-4 justify-content-center">
      <% products.forEach(product => { %>
      <div class="col-sm-12 col-md-6 col-lg-6 col-xl-4">
        <%- include("../partials/product", { product, listFlag: true }) %>
      </div>
      <% }) %>
    </div>
  </div>
</div>
