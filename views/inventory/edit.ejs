<div class="welcome-container">
  <h2>Edit Product</h2>

  <div class="inventory">
    <div class="row justify-content-center">
      <div class="col-6">
        <%- include("../partials/product", { product: values }) %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="registration-container">
    <% if (messages.general) { %>
    <div class="alert alert-danger"><%= messages.general %></div>
    <% } %>

    <form
      method="POST"
      enctype="multipart/form-data"
      action="/inventory/edit/<%= values._id %>"
    >
      <label for="title" class="form-label">Title</label>
      <input
        type="text"
        id="title"
        name="title"
        class="form-control"
        value="<%= values.title || '' %>"
      />
      <% if (messages.title) { %>
      <p class="text-danger"><%= messages.title %></p>
      <% } %>

      <label for="description" class="form-label">Description</label>
      <input
        type="text"
        id="description"
        name="description"
        class="form-control"
        value="<%= values.description || '' %>"
      />
      <% if (messages.description) { %>
      <p class="text-danger"><%= messages.description %></p>
      <% } %>

      <label for="category" class="form-label">Category</label>
      <input
        type="text"
        id="category"
        name="category"
        class="form-control"
        value="<%= values.category || '' %>"
      />
      <% if (messages.category) { %>
      <p class="text-danger"><%= messages.category %></p>
      <% } %>

      <label for="price" class="form-label">Price</label>
      <input
        type="number"
        step="0.01"
        id="price"
        name="price"
        class="form-control"
        value="<%= values.price || '' %>"
      />
      <% if (messages.price) { %>
      <p class="text-danger"><%= messages.price %></p>
      <% } %>

      <label for="salePrice" class="form-label">Sale Price (optional)</label>
      <input
        type="number"
        step="0.01"
        id="salePrice"
        name="salePrice"
        class="form-control"
        value="<%= values.salePrice || '' %>"
      />
      <% if (messages.salePrice) { %>
      <p class="text-danger"><%= messages.salePrice %></p>
      <% } %>

      <label for="shippingWeight" class="form-label"
        >Shipping Weight (kg)</label
      >
      <input
        type="number"
        id="shippingWeight"
        name="shippingWeight"
        class="form-control"
        value="<%= values.shippingWeight || '' %>"
      />
      <% if (messages.shippingWeight) { %>
      <p class="text-danger"><%= messages.shippingWeight %></p>
      <% } %>

      <label for="shippingWidth" class="form-label">Shipping Width (cm)</label>
      <input
        type="number"
        id="shippingWidth"
        name="shippingWidth"
        class="form-control"
        value="<%= values.shippingWidth || '' %>"
      />
      <% if (messages.shippingWidth) { %>
      <p class="text-danger"><%= messages.shippingWidth %></p>
      <% } %>

      <label for="shippingLength" class="form-label"
        >Shipping Length (cm)</label
      >
      <input
        type="number"
        id="shippingLength"
        name="shippingLength"
        class="form-control"
        value="<%= values.shippingLength || '' %>"
      />
      <% if (messages.shippingLength) { %>
      <p class="text-danger"><%= messages.shippingLength %></p>
      <% } %>

      <label for="shippingHeight" class="form-label"
        >Shipping Height (cm)</label
      >
      <input
        type="number"
        id="shippingHeight"
        name="shippingHeight"
        class="form-control"
        value="<%= values.shippingHeight || '' %>"
      />
      <% if (messages.shippingHeight) { %>
      <p class="text-danger"><%= messages.shippingHeight %></p>
      <% } %>

      <label for="imageUrl" class="form-label">Product Image</label>
      <input type="file" id="imageUrl" name="imageUrl" class="form-control" />
      <% if (messages.imageUrl) { %>
      <p class="text-danger"><%= messages.imageUrl %></p>
      <% } %>

      <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="featured"
        name="featured" <%= values.featured ? "checked" : "" %>>
        <label class="form-check-label mb-0" for="featured"
          >Featured Product</label
        >
      </div>
      <div class="mb-3">
        <button type="submit" class="btn">Confirm Edits</button>
      </div>
    </form>
  </div>
</div>
